{
    "name": "pageon/stitcher-io",
    "description": "Source code of stitcher.io",
    "license": "proprietary",
    "require": {
        "php": "^8.0",
        "pageon/stitcher-core": "dev-master",
        "spatie/commonmark-highlighter": "^2.0",
        "spatie/browsershot": "^3.40",
        "symfony/console": "^4.0",
        "dg/twitter-php": "^4.1"
    },
    "repositories" : [
        {
            "type": "vcs",
            "url" : "https://github.com/pageon/stitcher-core"
        }
    ],
    "require-dev": {
        "larapack/dd": "^1.1",
        "phpstan/phpstan": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "Brendt\\Stitcher\\": "src/"
        }
    },
    "scripts": {
        "analyze": "phpstan analyse --level=5 src/ public/"
    }
}
